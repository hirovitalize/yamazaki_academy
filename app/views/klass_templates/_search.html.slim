.col-md-4
  = f.input :name_cont_all, label: t_field(KlassTemplate, :name)
  .pull-right
    = render 'shared/action/select_all_button', options: { data: { target: '#q_course_category_id_in' } }
  = f.input :course_category_id_in, label: t_field(KlassTemplate, :course_category),
    as: :select,
    collection: CourseCategory.pluck(:name, :id),
    input_html: { multiple: true }
  = f.input :courses_id_in, label: t_field(KlassTemplate, :courses),
    as: :autocomplete,
    collection: Course.where(id: f.object.courses_id_in),
    input_html: { multiple: true, data: { models: 'courses' }}

.col-md-4
  = f.input :subjects_id_in, label: t_field(KlassTemplate, :subjects),
    as: :autocomplete,
    collection: Subject.where(id: f.object.subjects_id_in),
    input_html: { multiple: true, data: { models: 'subjects' }}
  = f.input :klasses_id_in, label: t_field(KlassTemplate, :klasses),
    as: :autocomplete,
    collection: Klass.where(id: f.object.klasses_id_in),
    input_html: { multiple: true, data: { models: 'klasses' }}