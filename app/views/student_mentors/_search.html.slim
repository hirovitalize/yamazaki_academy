.col-md-4
  .pull-right
    = render 'shared/action/mine_button', options: { data: { staff_target: '#q_staff_id_in' } }
  = f.input :staff_id_in, label: t_field(StudentMentor, :staff),
            as: :autocomplete,
            collection: Staff.where(id: f.object.staff_id_in),
            input_html: { multiple: false, data: { placeholder: "氏名・コードを入力（1文字以上）", minimum_input_length: 1, limit: 20, models: 'staffs', mainquery: 'name_or_code_start' }}
  = f.input :student_id_in, label: t_field(StudentMentor, :student),
            as: :autocomplete,
            collection: Student.where(id: f.object.student_id_in),
            input_html: { multiple: false, data: { models: 'students', mainquery: 'name_or_code_start' }}
  = f.input :staff_type_in, label: t_field(StudentMentor, :staff_type),
            as: :select,
            collection: ransack_enum_collection(StudentMentor, :staff_type)
